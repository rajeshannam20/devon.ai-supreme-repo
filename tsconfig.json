{
  "compilerOptions": {
    "module": "ESNext",                
    "moduleResolution": "node",        
    "target": "ESNext",                
    "esModuleInterop": true,           
    "skipLibCheck": true,              
    "resolveJsonModule": true,         
    "allowSyntheticDefaultImports": true, 
    "useDefineForClassFields": false, 
    "baseUrl": ".",                    
    "paths": {
      "@/*": ["./src/*"]               
    },
    "strict": true,                    
    "noImplicitAny": false,            
    "noUnusedLocals": false,          
    "noUnusedParameters": false,       
    "strictNullChecks": false          
  },
  "include": [
    "src/**/*.ts"                       
  ],
  "exclude": [
    "node_modules"                      
  ]
}
